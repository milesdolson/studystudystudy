<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All bookmarks
    </h1>

    <a href="/bookmarks/new" class="btn btn-block btn-outline-secondary">
      Add a new bookmark
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Study location
        </th>

        <th>
          Category
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @bookmarks.each do |bookmark| %>
      <tr>
        <!-- Display bookmark.id start -->
        <td>
          <%= bookmark.id %>
        </td>
        <!-- Display bookmark.id end -->

        <!-- Display bookmark.study_location_id start -->
        <td>
          <%= bookmark.study_location.created_at %>
        </td>
        <!-- Display bookmark.study_location_id end -->

        <!-- Display bookmark.category_id start -->
        <td>
          <%= bookmark.category.category %>
        </td>
        <!-- Display bookmark.category_id end -->

        <!-- Display bookmark.created_at start -->
        <td>
          <%= time_ago_in_words(bookmark.created_at) %> ago
        </td>
        <!-- Display bookmark.created_at end -->

        <!-- Display bookmark.updated_at start -->
        <td>
          <%= time_ago_in_words(bookmark.updated_at) %> ago
        </td>
        <!-- Display bookmark.updated_at end -->

        <td>
          <a href="/bookmarks/<%= bookmark.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
