<h1>
  Edit bookmark #<%= @bookmark.id %>
</h1>

<hr>

<!-- Form bookmark start -->
<form action="/update_bookmark/<%= @bookmark.id %>" method="post">
<!-- Form bookmark end -->

  <!-- Label and input for study_location_id start -->
  <div class="form-group">
    <label for="study_location_id">
      Study location
    </label>

    <!-- Input for study_location_id start -->
    <%= select_tag(:study_location_id, options_from_collection_for_select(StudyLocationDetail.all, :id, :created_at, @bookmark.study_location_id), :class => "form-control") %>
    <!-- Input for study_location_id end -->
  </div>
  <!-- Label and input for study_location_id end -->

  <!-- Label and input for category_id start -->
  <div class="form-group">
    <label for="category_id">
      Category
    </label>

    <!-- Input for category_id start -->
    <%= select_tag(:category_id, options_from_collection_for_select(Category.all, :id, :category, @bookmark.category_id), :class => "form-control") %>
    <!-- Input for category_id end -->
  </div>
  <!-- Label and input for category_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update bookmark
  </button>
</form>

<hr>

<a href="/bookmarks">
  Go back
</a>
