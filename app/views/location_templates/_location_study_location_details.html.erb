<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Study Location Details

    <a data-toggle="collapse" href="#location_study_location_details_new_form">
      Add study location detail
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @location.study_location_details.each do |study_location_detail| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/study_location_details/<%= study_location_detail.id %>">
          <%= study_location_detail.created_at %>
        </a>

        <%if current_user == study_location_detail.user %>
          <a href="/delete_study_location_detail_from_location/<%= study_location_detail.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="location_study_location_details_new_form">
        <%= render partial: "location_templates/location_study_location_details_new_form" %>
      </div>
    </div>

  </ul>
</div>
