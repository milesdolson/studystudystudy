<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Noise level #<%= @noise_level.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/noise_levels" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/noise_levels/<%= @noise_level.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit noise level
        </a>
      </div>

      <div class="col">
        <a href="/delete_noise_level/<%= @noise_level.id %>" class="btn btn-block btn-outline-secondary">
          Delete noise level
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Level
      </dt>
      <dd>
        <%= @noise_level.level %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@noise_level.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@noise_level.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "noise_level_templates/noise_level_study_location_details" %>
  </div>
</div>
