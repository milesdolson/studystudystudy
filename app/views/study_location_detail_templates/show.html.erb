<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Study location detail #<%= @study_location_detail.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/study_location_details" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @study_location_detail.user %>
          <a href="/study_location_details/<%= @study_location_detail.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit study_location_detail
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @study_location_detail.user %>
          <a href="/delete_study_location_detail/<%= @study_location_detail.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete study_location_detail
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Ambience
      </dt>
      <dd>
        <% if @study_location_detail.ambience.present? %>
          <a href="/ambiences/<%= @study_location_detail.ambience_id %>">
            <%= @study_location_detail.ambience.description %>
          </a>
        <% end %>
      </dd>

      <dt>
        Noise level
      </dt>
      <dd>
        <% if @study_location_detail.noise_level.present? %>
          <a href="/noise_levels/<%= @study_location_detail.noise_level_id %>">
            <%= @study_location_detail.noise_level.level %>
          </a>
        <% end %>
      </dd>

      <dt>
        Internet quality
      </dt>
      <dd>
        <% if @study_location_detail.internet_quality.present? %>
          <a href="/internet_qualities/<%= @study_location_detail.internet_quality_id %>">
            <%= @study_location_detail.internet_quality.quality %>
          </a>
        <% end %>
      </dd>

      <dt>
        Plug availability
      </dt>
      <dd>
        <% if @study_location_detail.plug_availability.present? %>
          <a href="/plug_availabilities/<%= @study_location_detail.plug_availability_id %>">
            <%= @study_location_detail.plug_availability.availability %>
          </a>
        <% end %>
      </dd>

      <dt>
        Location
      </dt>
      <dd>
        <% if @study_location_detail.location.present? %>
          <a href="/locations/<%= @study_location_detail.location_id %>">
            <%= @study_location_detail.location.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <% if @study_location_detail.user.present? %>
          <a href="/users/<%= @study_location_detail.user_id %>">
            <%= @study_location_detail.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@study_location_detail.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@study_location_detail.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "study_location_detail_templates/study_location_detail_favorites" %>
  </div>
</div>
