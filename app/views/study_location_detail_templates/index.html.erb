<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All study location details
    </h1>

    <a href="/study_location_details/new" class="btn btn-block btn-outline-secondary">
      Add a new study location detail
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "study_location_detail_templates/study_location_details_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Ambience
        </th>

        <th>
          Noise level
        </th>

        <th>
          Internet quality
        </th>

        <th>
          Plug availability
        </th>

        <th>
          Location
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @study_location_details.each do |study_location_detail| %>
      <tr>
        <td>
          <%= study_location_detail.id %>
        </td>

        <td>
          <% if study_location_detail.ambience.present? %>
            <a href="/ambiences/<%= study_location_detail.ambience.id %>">
              <%= study_location_detail.ambience.description %>
            </a>
          <% end %>
        </td>

        <td>
          <% if study_location_detail.noise_level.present? %>
            <a href="/noise_levels/<%= study_location_detail.noise_level.id %>">
              <%= study_location_detail.noise_level.level %>
            </a>
          <% end %>
        </td>

        <td>
          <% if study_location_detail.internet_quality.present? %>
            <a href="/internet_qualities/<%= study_location_detail.internet_quality.id %>">
              <%= study_location_detail.internet_quality.quality %>
            </a>
          <% end %>
        </td>

        <td>
          <% if study_location_detail.plug_availability.present? %>
            <a href="/plug_availabilities/<%= study_location_detail.plug_availability.id %>">
              <%= study_location_detail.plug_availability.availability %>
            </a>
          <% end %>
        </td>

        <td>
          <% if study_location_detail.location.present? %>
            <a href="/locations/<%= study_location_detail.location.id %>">
              <%= study_location_detail.location.name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if study_location_detail.user.present? %>
            <a href="/users/<%= study_location_detail.user.id %>">
              <%= study_location_detail.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(study_location_detail.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(study_location_detail.updated_at) %> ago
        </td>

        <td>
          <a href="/study_location_details/<%= study_location_detail.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @study_location_details, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
