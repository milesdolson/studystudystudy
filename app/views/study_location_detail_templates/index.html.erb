<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All study location details
    </h1>

    <a href="/study_location_details/new" class="btn btn-block btn-outline-secondary">
      Add a new study location detail
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Ambience
        </th>

        <th>
          Noise level
        </th>

        <th>
          Internet quality
        </th>

        <th>
          Plug availability
        </th>

        <th>
          Location
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @study_location_details.each do |study_location_detail| %>
      <tr>
        <!-- Display study_location_detail.id start -->
        <td>
          <%= study_location_detail.id %>
        </td>
        <!-- Display study_location_detail.id end -->

        <!-- Display study_location_detail.ambience_id start -->
        <td>
          <%= study_location_detail.ambience.description %>
        </td>
        <!-- Display study_location_detail.ambience_id end -->

        <!-- Display study_location_detail.noise_level_id start -->
        <td>
          <%= study_location_detail.noise_level.level %>
        </td>
        <!-- Display study_location_detail.noise_level_id end -->

        <!-- Display study_location_detail.internet_quality_id start -->
        <td>
          <%= study_location_detail.internet_quality.quality %>
        </td>
        <!-- Display study_location_detail.internet_quality_id end -->

        <!-- Display study_location_detail.plug_availability_id start -->
        <td>
          <%= study_location_detail.plug_availability.availability %>
        </td>
        <!-- Display study_location_detail.plug_availability_id end -->

        <!-- Display study_location_detail.location_id start -->
        <td>
          <%= study_location_detail.location.name %>
        </td>
        <!-- Display study_location_detail.location_id end -->

        <!-- Display study_location_detail.user_id start -->
        <td>
          <%= study_location_detail.user.email %>
        </td>
        <!-- Display study_location_detail.user_id end -->

        <!-- Display study_location_detail.created_at start -->
        <td>
          <%= time_ago_in_words(study_location_detail.created_at) %> ago
        </td>
        <!-- Display study_location_detail.created_at end -->

        <!-- Display study_location_detail.updated_at start -->
        <td>
          <%= time_ago_in_words(study_location_detail.updated_at) %> ago
        </td>
        <!-- Display study_location_detail.updated_at end -->

        <td>
          <a href="/study_location_details/<%= study_location_detail.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
