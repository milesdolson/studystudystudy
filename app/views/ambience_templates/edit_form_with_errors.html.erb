<% if @ambience.errors.any? %>
  <% @ambience.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit ambience #<%= @ambience.id %>
</h1>

<hr>

<form action="/update_ambience/<%= @ambience.id %>" method="post">

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control" value="<%= @ambience.description %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update ambience
  </button>
</form>

<hr>

<a href="/ambiences">
  Go back
</a>
