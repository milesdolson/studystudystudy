<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All plug availabilities
    </h1>

    <a href="/plug_availabilities/new" class="btn btn-block btn-outline-secondary">
      Add a new plug availability
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Availability
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @plug_availabilities.each do |plug_availability| %>
      <tr>
        <!-- Display plug_availability.id start -->
        <td>
          <%= plug_availability.id %>
        </td>
        <!-- Display plug_availability.id end -->

        <!-- Display plug_availability.availability start -->
        <td>
          <%= plug_availability.availability %>
        </td>
        <!-- Display plug_availability.availability end -->

        <!-- Display plug_availability.created_at start -->
        <td>
          <%= time_ago_in_words(plug_availability.created_at) %> ago
        </td>
        <!-- Display plug_availability.created_at end -->

        <!-- Display plug_availability.updated_at start -->
        <td>
          <%= time_ago_in_words(plug_availability.updated_at) %> ago
        </td>
        <!-- Display plug_availability.updated_at end -->

        <td>
          <a href="/plug_availabilities/<%= plug_availability.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @plug_availabilities, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
