<!-- Validation failure messages -->
<% if @plug_availability.errors.any? %>
  <% @plug_availability.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit plug availability #<%= @plug_availability.id %>
</h1>

<hr>

<!-- Form plug_availability start -->
<form action="/update_plug_availability/<%= @plug_availability.id %>" method="post">
<!-- Form plug_availability end -->

  <!-- Label and input for availability start -->
  <div class="form-group">
    <label for="availability">
      Availability
    </label>

    <!-- Input for availability start -->
    <input type="text" id="availability" name="availability" class="form-control" value="<%= @plug_availability.availability %>">
    <!-- Input for availability end -->
  </div>
  <!-- Label and input for availability end -->

  <button class="btn btn-block btn-outline-secondary">
    Update plug availability
  </button>
</form>

<hr>

<a href="/plug_availabilities">
  Go back
</a>
