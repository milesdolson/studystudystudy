<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Favorites

    <a data-toggle="collapse" href="#category_favorites_new_form">
      Add bookmark
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @category.favorites.each do |bookmark| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/bookmarks/<%= bookmark.id %>">
          <%= bookmark.study_location_id %>
        </a>

        <a href="/delete_bookmark_from_category/<%= bookmark.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="category_favorites_new_form">
        <%= render partial: "category_templates/category_favorites_new_form" %>
      </div>
    </div>

  </ul>
</div>
